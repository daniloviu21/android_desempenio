<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/insectofondo"
    tools:context=".consultarpeleas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="regresar"
                android:layout_gravity="center"
                android:text="@string/regresar"
                android:backgroundTint="@color/rojo"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/consultar_peleass" />

            <Button
                android:id="@+id/buttonGenerarPeleas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/peleas"
                android:onClick="generarPeleas" />

            <TextView
                android:id="@+id/textViewPeleas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:minHeight="100dp"
                android:background="@android:color/white"
                android:padding="8dp" />

            <TextView
                android:id="@+id/textViewIndicativo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presiona el botÃ³n para generar peleas"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:padding="8dp"
                android:background="@android:color/white"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
